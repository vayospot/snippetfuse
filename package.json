{
  "name": "snippetfuse",
  "displayName": "SnippetFuse",
  "version": "0.4.0",
  "publisher": "vayospot",
  "description": "A context packaging tool that lets devs quickly scoop up snippets from different files, organize them, then spit them out in a neat format ready to paste into ChatGPT/Claude/Gemini/whatever",
  "author": {
    "name": "vayo"
  },
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Snippets",
    "Debuggers",
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "snippetfuse.addSnippet",
        "title": "Add Snippet (SnippetFuse)"
      },
      {
        "command": "snippetfuse.addMainSnippet",
        "title": "Set Main Issue (SnippetFuse)"
      },
      {
        "command": "snippetfuse.addTitleContextSnippet",
        "title": "Add File to Context (SnippetFuse)"
      },
      {
        "command": "snippetfuse.addFilesSnippet",
        "title": "Quick Add Files (SnippetFuse)"
      },
      {
        "command": "snippetfuse.generateCommitContext",
        "title": "Generate AI Commit Context (SnippetFuse)",
        "icon": {
          "dark": "assets/icon-dark.svg",
          "light": "assets/icon-light.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "snippetfuse.addSnippet",
        "key": "alt+c",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "snippetfuse.addMainSnippet",
        "key": "alt+m",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "snippetfuse.addSnippet",
          "group": "9_cutcopypaste@5"
        },
        {
          "command": "snippetfuse.addMainSnippet",
          "group": "9_cutcopypaste@5",
          "when": "editorHasSelection"
        }
      ],
      "editor/title/context": [
        {
          "command": "snippetfuse.addTitleContextSnippet",
          "group": "1_run@1"
        }
      ],
      "scm/title": [
        {
          "command": "snippetfuse.generateCommitContext",
          "group": "navigation@50",
          "when": "scmProvider == git"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippetfuse",
          "title": "SnippetFuse",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "snippetfuse": [
        {
          "id": "snippetfuse.mainView",
          "name": "AI Context Builder",
          "type": "webview",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "SnippetFuse",
      "properties": {
        "snippetfuse.prompts.default": {
          "type": "string",
          "enum": [
            "bug-report",
            "feature-request",
            "code-review",
            "custom"
          ],
          "enumItemLabels": [
            "Bug Report",
            "Feature Request",
            "Code Review",
            "Custom Prompt"
          ],
          "default": "bug-report",
          "description": "The default prompt template to use when the panel is opened."
        },
        "snippetfuse.prompts.bugReport": {
          "type": "string",
          "default": "bug-report",
          "description": "The template for the 'Bug Report' prompt.",
          "editPresentation": "multilineText"
        },
        "snippetfuse.prompts.featureRequest": {
          "type": "string",
          "default": "feature-request",
          "description": "The template for the 'Feature Request' prompt.",
          "editPresentation": "multilineText"
        },
        "snippetfuse.prompts.codeReview": {
          "type": "string",
          "default": "code-review",
          "description": "The template for the 'Code Review' prompt.",
          "editPresentation": "multilineText"
        },
        "snippetfuse.prompts.gitCommit": {
          "type": "string",
          "default": "Write a commit message (max 72 chars for the subject) for the following changes, strictly adhering to the Conventional Commits specification. The tone should be formal and objective:",
          "description": "The template used for the 'Generate AI Commit Context' command in the Source Control panel.",
          "editPresentation": "multilineText"
        },
        "snippetfuse.prompts.requestFullCodePrompt": {
          "type": "string",
          "default": "IMPORTANT: For all important code changes, please provide the complete, updated code file. Do not use partial snippets or diffs.",
          "description": "The text appended to the prompt when 'Request full code from AI' is checked.",
          "editPresentation": "multilineText"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.11",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.40",
    "ignore": "^7.0.5",
    "jspdf": "^4.2.0"
  },
  "bugs": {
    "url": "https://github.com/vayospot/snippetfuse/issues",
    "email": "vayospot@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vayospot/snippetfuse.git"
  }
}
